<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#df2029">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Package details"
            android:id="@+id/textView4"
            android:layout_marginTop="45dp"
            android:textSize="36dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYMENT"
            android:id="@+id/btnpaymon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="gotopaymoney"
            android:layout_alignParentStart="true"
            android:textSize="22dp"
            android:textColor="#fbfafa"
            android:background="#df2029" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16 days weather package for 15 rupees/month"
            android:id="@+id/checkBox"
            android:textColor="#faf7f7"
            android:textSize="26dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="68dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 days weather package for 5 rupees/month"
            android:id="@+id/checkBox2"
            android:textColor="#faf7f7"
            android:textSize="26dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/checkBox"
            android:layout_alignLeft="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox" />
    </RelativeLayout>
</LinearLayout>
